<ul class="contTotalCard">

    {{#each products}}
     
    <li>
        <article class="contCard">
            <h2>{{title}}</h2> <!-- Cambiado de this.title a this.pid.title -->
            <img src="{{thumbnail}}" alt="{{title}}"> <!-- Cambiado de this.thumbnail a this.pid.thumbnail -->
            <p>{{description}}</p> <!-- Cambiado de this.description a this.pid.description -->
            <h3>${{price}}</h3> <!-- Cambiado de this.price a this.pid.price -->
            <p>Cantidad: {{quantity}}</p>
            <button class="BotonEliminar" data-product-id="{{pid}}"  data-user-id="{{../userId}}" class="boton" type="submit">Eliminar Producto</button>
        </article>
    </li>
    {{/each}}
</ul>


